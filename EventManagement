// Helper method to check if a time slot is within the event's time range
    private boolean isTimeSlotWithinEventTime(Date startDate, Date endDate, String startTimeString, String endTimeString) {
        try {
            Date startTime = timeFormat.parse(startTimeString);
            Date endTime = timeFormat.parse(endTimeString);

            // Check if the activity start time is after or equal to the event start time
            // and the activity end time is before or equal to the event end time
            if ((startTime.equals(startDate) || startTime.after(startDate))
                    && (endTime.equals(endDate) || endTime.before(endDate))) {
                return true;
            } else {
                System.out.println("Activity time should be within the event time range.");
                return false;
            }
        } catch (ParseException e) {
            // Handle the exception for invalid time format.
            return false;
        }
    }

    // Helper method to check if a time slot is available
    private boolean isTimeSlotAvailable(boolean[] timeSlotsAvailable, String startTimeString, String endTimeString) {
        int startTime = convertTimeToMinutes(startTimeString);
        int endTime = convertTimeToMinutes(endTimeString);

        for (int i = startTime; i <= endTime; i++) {
            if (timeSlotsAvailable[i]) {
                return false; // Time slot is not available
            }
        }

        return true; // Time slot is available
    }

// Helper method to mark a time slot as used
    private void markTimeSlotAsUsed(boolean[] timeSlotsAvailable, String startTimeString, String endTimeString) {
        int startTime = convertTimeToMinutes(startTimeString);
        int endTime = convertTimeToMinutes(endTimeString);

        for (int i = startTime; i <= endTime; i++) {
            timeSlotsAvailable[i] = true; // Mark the time slot as used
        }
    }

// Helper method to convert time in HHmm format to minutes since midnight
    private int convertTimeToMinutes(String timeString) {
        int hours = Integer.parseInt(timeString.substring(0, 2));
        int minutes = Integer.parseInt(timeString.substring(2));
        return hours * 60 + minutes;
    }*/
}
