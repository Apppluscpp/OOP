import java.util.InputMismatchException;
import java.util.Scanner;

public class Test {

    public static void main(String[] args) {
        String username;
        String password;
        String newUsername;
        String newPassword;
        boolean exit = false;
        boolean valid;
        int loginChoice;
        int adminChoice;
        String title;

        Scanner scanner = new Scanner(System.in);

        Admin admin = new Admin();
        Exhibitor exhibitor = new Exhibitor();
        Participant participant = new Participant();
        EventManagement m1 = new EventManagement();

        while (!exit) {
            System.out.println("\t\t***Welcome to the Login Page***\n");
            do {
                try {
                    admin.welcomePage();
                    System.out.print("Enter your login choice(1 - 4): ");
                    loginChoice = scanner.nextInt();
                    break;
                } catch (InputMismatchException e) {
                    System.out.println("Invalid input. Please enter a number only\n");
                    scanner.nextLine();
                }
            } while (true);

            switch (loginChoice) {
                case 1:
                    do {
                        System.out.print("Enter your username: ");
                        username = scanner.next();
                        System.out.print("Enter your Password: ");
                        password = scanner.next();

                        valid = admin.login(username, password, Admin.getFilePath());
                        if (valid) {
                            m1.mainMenu();
                            adminChoice = scanner.nextInt();
                            scanner.nextLine();
                            switch (adminChoice) {
                                case 1:
                                    String startDateString;
                                    String endDateString;
                                    String startTimeString = "";
                                    String endTimeString = "";
                                    String venue = "";
                                    String industry = "";
                                    String eventID = "";

                                    do {
                                        System.out.print("Enter starting date (yyyy-MM-dd): ");
                                        startDateString = scanner.next();
                                        System.out.print("Enter ending date (yyyy-MM-dd): ");
                                        endDateString = scanner.next();

                                        valid = m1.validateDate(startDateString, endDateString);

                                    } while (!valid);
                                    do {
                                        System.out.print("Enter starting time (HHmm): ");
                                        startTimeString = scanner.next();
                                        System.out.print("Enter ending time (HHmm): ");
                                        endTimeString = scanner.next();

                                        valid = m1.validateTime(startTimeString, endTimeString);
                                    } while (!valid);

                                    do {
                                        System.out.print("Enter venue (Alphabetic characters only): ");
                                        venue = scanner.next().trim();
                                        valid = m1.validateAlpha(venue);
                                    } while (!valid);
                                    m1.setVenue(venue);

                                    valid = false;
                                    do {
                                        try {
                                            m1.industryMenu();
                                            int industryChoice = scanner.nextInt();
                                            scanner.nextLine();
                                            switch (industryChoice) {
                                                case 1:
                                                    industry = "Food and Beverage";
                                                    break;
                                                case 2:
                                                    industry = "Technology and Electronics";
                                                    break;
                                                case 3:
                                                    industry = "Tourism and Travel";
                                                    break;
                                                case 4:
                                                    industry = "Houseware and Home Products";
                                                    break;
                                                case 5:
                                                    industry = "Fashion and Apparel";
                                                    break;
                                                default:
                                                    System.out.println("Please enter 1 - 5 only");
                                                    break;
                                            }
                                        } catch (InputMismatchException e) {
                                            System.out.println("Invalid input. Please enter an integer only.");
                                            scanner.nextLine();
                                        }
                                    } while (industry.isEmpty());

                                    m1.setIndustry(industry);

                                    do {
                                        System.out.print("Enter title (Alphabetic characters only): ");
                                        title = scanner.next().trim();
                                        valid = m1.validateAlpha(title);
                                    } while (!valid);
                                    m1.setTitle(title);
                                    m1.saveEventToFile();

                                    System.out.println(m1);

                                    break;

                                case 5:
                                    System.out.print("Enter new username: ");
                                    newUsername = scanner.next();
                                    System.out.print("Enter new Password: ");
                                    newPassword = scanner.next();

                                    admin.adminUpdate(username, password, newUsername, newPassword);

                                    break;

                                case 6:
                                    System.exit(0);

                                default:
                                    System.out.println("Please enter 1 - 6 only");
                                    break;
                            }
                        }
                    } while (!valid);
                    break;
                
                // Rest of your code...
            }
            System.out.print("Press Y to exit, N to stay: ");
            String exitChoice = scanner.next().toLowerCase();

            if (exitChoice.equals("y")) {
                exit = true;
            } else if (exitChoice.equals("n")) {
                // No need to do anything, the loop will continue
            } else {
                System.out.println("Invalid choice. Please enter 'Y' or 'N'.");
            }
        }
    }
}
